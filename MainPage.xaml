<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RestaurantMaster"
             x:Class="RestaurantMaster.MainPage">

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Header Section -->
        <Label Text="Restaurant Management System"
               FontSize="32"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <!-- Button to Manage Reservations -->
        <Button Text="Manage Reservations" 
                FontSize="18"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                Clicked="OnManageReservationsClicked" />

        <!-- Button to Manage Orders and Menu -->
        <Button Text="Manage Orders and Menu"
                FontSize="18"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                Clicked="OnManageOrdersMenuClicked" />

        <!-- Placeholder for future content -->
        <Label Text="Content will be displayed here."
               FontSize="14"
               HorizontalOptions="Center"
               VerticalOptions="EndAndExpand" />

    </VerticalStackLayout>
</ContentPage>
